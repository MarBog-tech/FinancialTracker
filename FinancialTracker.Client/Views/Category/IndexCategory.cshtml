@using Microsoft.AspNetCore.Mvc.TagHelpers
@model List<FinancialTracker.Client.Models.Entity.Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="text-center">
            <h2 class="text-white py-2">Category List</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="d-flex justify-content-between mb-3">
            <div></div>
            <a asp-controller="Category" asp-action="CreateCategory" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>

        <!-- Контейнер для категорій з прокручуванням -->
        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
            @foreach (var obj in Model.OrderBy(u => u.Name))
            {
                <div class="col">
                    <div class="card shadow-sm h-80">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title">@obj.Name</h5>
                            <div class="mt-auto">
                                <div class="btn-group" role="group">
                                    <a asp-controller="Category" asp-action="UpdateCategory" asp-route-categoryId="@obj.Id" class="btn btn-sm btn-primary mx-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-controller="Category" asp-action="DeleteCategory" asp-route-categoryId="@obj.Id" class="btn btn-sm btn-danger mx-1">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
